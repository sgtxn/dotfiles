set $mod Mod4
set $term alacritty
set $lockcmd swaylock

include colors
include shortcuts
include monitors
include input
include windowrules
include startup
include /etc/sway/config.d/*

smart_borders on
smart_gaps on
# gaps inner 10
default_border pixel 3
floating_modifier $mod normal
focus_follows_mouse always

exec swayidle -w \
        timeout 600 '$lockcmd' \
        timeout 610 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
        before-sleep '$lockcmd' \
        lock '$lockcmd'
